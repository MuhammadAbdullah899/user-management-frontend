{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100 mb-0  pb-0 pt-2 text-center">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                <form class="login100-form validate-form" method="post">
                    {{ parent() }}
                    <h3 class="login100-form-title p-b-5">
						Account Login
					</h3>

                    <div class="wrap-input100 " data-validate = "Valid email is required: ex@abc.xyz">
                        <input type="email" name="email" id="inputEmail" class="input100" placeholder="Email" required autofocus>
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                    <br>
                    <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
                        <input type="password" name="password" id="inputPassword" class="input100" placeholder="Password" required>
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                        <button class="login100-form-btn" type="submit">
                            Sign in
                        </button>
                        <a href="{{ path('user_create') }}" class="txt2 hov1">
                            Sign up
                        </a>
                    </div>

                    <div style="display: none" class="text-center p-t-45 p-b-4">
						<span class="txt1">
							Forgot
						</span>

                        <a href="#" class="txt2 hov1">
                            Username / Password?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}